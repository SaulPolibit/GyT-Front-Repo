# API Configuration
# Set this to your actual API base URL (without /api path)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Examples:
# Development:
# NEXT_PUBLIC_API_URL=http://localhost:3001
#
# Production:
# NEXT_PUBLIC_API_URL=https://api.polibit.io

# DocuSeal Configuration
# Set this to your DocuSeal contract template URLs
# National template is used for Mexico, International for other countries
NEXT_PUBLIC_DOCUSEAL_NATIONAL_CONTRACT_TEMPLATE_URL=https://docuseal.com/d/tmbNrqj1TzQoPR
NEXT_PUBLIC_DOCUSEAL_INTERNATIONAL_CONTRACT_TEMPLATE_URL=https://docuseal.com/d/bxLwxbkPqRp3G2

# LP Portal Settings
# Controls whether the "Payment" tab is visible in LP portal settings
# Set to 'false' to hide the Payment tab, or leave unset/set to 'true' to show it
# NEXT_PUBLIC_SHOW_PAYMENTS_TAB=true

# Controls advanced notification settings visibility in LP portal settings
# When set to 'false', hides: SMS Notifications, Portal Notifications, and Communication Preferences
# Only Email Notifications and Save button will remain visible
# NEXT_PUBLIC_SHOW_ADVANCED_NOTIFICATIONS=true

# Controls compliance/tax information visibility in LP portal General Info tab
# When set to 'false', hides: Tax Information, KYC/AML Documentation, and Investor Accreditation cards
# Only Legal Entity Information and Address Information will remain visible
# NEXT_PUBLIC_SHOW_COMPLIANCE_INFO=true

# Controls Dashboard and Reports visibility in LP portal navigation
# When set to 'false', hides: Dashboard and Reports menu items
# Marketplace, Portfolio, Documents, and Chat remain visible
# NEXT_PUBLIC_SHOW_DASHBOARD_REPORTS=true

# Controls Management section visibility in LP portal navigation
# When set to 'false', hides entire Management section (Capital and Operations groups)
# NEXT_PUBLIC_SHOW_MANAGEMENT_SECTION=true

# Investment Manager Settings
# Controls advanced notification settings visibility in Investment Manager settings
# When set to 'false', hides: SMS Notifications, Portal Notifications, and Communication Preferences
# Only Email Notifications and Save button will remain visible
# NEXT_PUBLIC_SHOW_ADVANCED_NOTIFICATIONS_IM=true
NEXT_PUBLIC_POLIBIT_AGENT_ADDRESS=0xa3...

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_SERVICE_BASE_COST_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_ADDITIONAL_SERVICE_COST_PRICE_ID=price_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_SHOW_PAYMENTS_TAB=false
NEXT_PUBLIC_SHOW_ADVANCED_NOTIFICATIONS=false
NEXT_PUBLIC_SHOW_COMPLIANCE_INFO=false

# Subscription Model Configuration
# Controls which pricing model is shown to users
# Options: 'tier_based' (default) or 'payg' (Pay-As-You-Grow)
# tier_based: Fixed monthly fee based on AUM and investor limits (Starter enterprises)
# payg: Base fee + per-investor costs for KYC and envelopes (Big enterprises)
NEXT_PUBLIC_SUBSCRIPTION_MODEL=tier_based
# NEXT_PUBLIC_SUBSCRIPTION_MODEL=payg

# Stripe Integration
# Set to 'true' to use real Stripe checkout, or 'false' for emulated/demo mode
NEXT_PUBLIC_USE_REAL_STRIPE=false

# Stripe API Keys (get these from your Stripe Dashboard > Developers > API keys)
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx

# Stripe Webhook Secret (get this when setting up webhooks in Stripe Dashboard)
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs - Tier Based Model (create in Stripe Dashboard > Products)
# Setup fee (one-time $5,280)
STRIPE_PRICE_SETUP_FEE=price_setup_fee_xxxxx
# Monthly subscription tiers
STRIPE_PRICE_TIER_STARTER=price_tier_starter_xxxxx
STRIPE_PRICE_TIER_PROFESSIONAL=price_tier_professional_xxxxx
STRIPE_PRICE_TIER_ENTERPRISE=price_tier_enterprise_xxxxx

# Stripe Price IDs - PAYG Model (create in Stripe Dashboard > Products)
STRIPE_PRICE_PAYG_STARTER=price_payg_starter_xxxxx
STRIPE_PRICE_PAYG_GROWTH=price_payg_growth_xxxxx
STRIPE_PRICE_PAYG_ENTERPRISE=price_payg_enterprise_xxxxx

# Stripe Price IDs - Shared Products (used by both models)
# Emission products (one-time)
STRIPE_PRICE_EMISSION_SINGLE=price_emission_single_xxxxx
STRIPE_PRICE_EMISSION_PACK_5=price_emission_pack_5_xxxxx
STRIPE_PRICE_EMISSION_PACK_10=price_emission_pack_10_xxxxx
STRIPE_PRICE_EMISSION_PACK_20=price_emission_pack_20_xxxxx