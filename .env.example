# API Configuration
# Set this to your actual API base URL (without /api path)
NEXT_PUBLIC_API_URL=http://localhost:3001

# Examples:
# Development:
# NEXT_PUBLIC_API_URL=http://localhost:3001
#
# Production:
# NEXT_PUBLIC_API_URL=https://api.polibit.io

# DocuSeal Configuration
# Set this to your DocuSeal contract template URLs
# National template is used for Mexico, International for other countries
NEXT_PUBLIC_DOCUSEAL_NATIONAL_CONTRACT_TEMPLATE_URL=https://docuseal.com/d/tmbNrqj1TzQoPR
NEXT_PUBLIC_DOCUSEAL_INTERNATIONAL_CONTRACT_TEMPLATE_URL=https://docuseal.com/d/bxLwxbkPqRp3G2

# LP Portal Settings
# Controls whether the "Payment" tab is visible in LP portal settings
# Set to 'false' to hide the Payment tab, or leave unset/set to 'true' to show it
# NEXT_PUBLIC_SHOW_PAYMENTS_TAB=true

# Controls advanced notification settings visibility in LP portal settings
# When set to 'false', hides: SMS Notifications, Portal Notifications, and Communication Preferences
# Only Email Notifications and Save button will remain visible
# NEXT_PUBLIC_SHOW_ADVANCED_NOTIFICATIONS=true

# Controls compliance/tax information visibility in LP portal General Info tab
# When set to 'false', hides: Tax Information, KYC/AML Documentation, and Investor Accreditation cards
# Only Legal Entity Information and Address Information will remain visible
# NEXT_PUBLIC_SHOW_COMPLIANCE_INFO=true

# Controls Dashboard and Reports visibility in LP portal navigation
# When set to 'false', hides: Dashboard and Reports menu items
# Marketplace, Portfolio, Documents, and Chat remain visible
# NEXT_PUBLIC_SHOW_DASHBOARD_REPORTS=true

# Controls Management section visibility in LP portal navigation
# When set to 'false', hides entire Management section (Capital and Operations groups)
# NEXT_PUBLIC_SHOW_MANAGEMENT_SECTION=true

# Investment Manager Settings
# Controls advanced notification settings visibility in Investment Manager settings
# When set to 'false', hides: SMS Notifications, Portal Notifications, and Communication Preferences
# Only Email Notifications and Save button will remain visible
# NEXT_PUBLIC_SHOW_ADVANCED_NOTIFICATIONS_IM=true
